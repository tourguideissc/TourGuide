<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload_profile_picture_after_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.example.rajeev.tourguide.UploadProfilePictureAfterSignUp"
    >

    <Button
        android:text="UPLOAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/gray"
        android:shadowColor="@color/white"
        android:shadowRadius="3"
        android:id="@+id/upload_image_button_upload_profile_" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_upload_profile_sign_up_2"
        android:gravity="center"
        android:layout_below="@+id/linearlayout_upload_profile_sign_up_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="26dp">

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Camera"
             android:id="@+id/camera_button_upload_profile_sign_up"
             android:textColor="@color/white"
             android:backgroundTint="@color/gray"
             android:shadowColor="@color/white"
             android:shadowRadius="3"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallary"
            android:id="@+id/gallary_button_upload_profile_sign_up"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:shadowColor="@color/white"
            android:shadowRadius="3"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayout_upload_profile_sign_up_1"
        android:gravity="center"
        android:foregroundGravity="center"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tg_header"
            android:layout_marginBottom="30dp"
            android:id="@+id/tg_header_upload_pic_sign_up"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/default_user_pic"
            android:layout_marginBottom="30dp"
            android:id="@+id/user_profile_pic_upload_profile_sign_up"
            />
    </LinearLayout>

</RelativeLayout>
